<!--  Launch file for signle robot on Gazebo -->
<launch>
	<!--<remap from="scan" to="base_scan"/>-->
	
	<include file="$(find exp_devel)/launch/move_base_kbk.launch" />
	
	<include file="$(find husky_navigation)/launch/gmapping.launch" />	
  
	<include file="$(find husky_gazebo)/launch/husky_empty_world.launch" >
		  <arg name="world_name" value="$(find exp_devel)/worlds/box_world.world"/>
		  <arg name="x_ini" value="0.0"/>
  		  <arg name="y_ini" value="0.0"/>
  		  <arg name="z_ini" value="0.0"/>
		  
	</include>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find exp_devel)/rviz/husky_rrt.rviz">
		<!--<remap from="move_base_simple/goal" to="/move_base_simple/goal"/>-->
	</node>
	
	<node name="laser_hot_fix" pkg="exp_devel" type="laser_hot_fix"  output="screen">
		<param name="max_range" value="6.0" />
		<param name="sub_scan_topic" value="scan" />
		<param name="pub_scan_topic" value="scan_fix" />
	</node>
	
	<!--<include file="$(find measure_distance)/launch/measure_distance.launch" />-->

</launch>



